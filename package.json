{
  "name": "thibaudcolas",
  "version": "1.0.0",
  "private": true,
  "author": "Thibaud Colas",
  "license": "MIT",
  "homepage": "https://thib.me/",
  "description": "My personal portfolio website",
  "repository": {
    "type": "git",
    "url": "https://github.com/thibaudcolas/thibaudcolas.git"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "proseWrap": "preserve"
  },
  "dependencies": {},
  "devDependencies": {
    "prettier": "^1.10.2"
  },
  "scripts": {
    "start": "bundle exec jekyll serve",
    "dist": "bundle exec jekyll build",
    "formatter": "prettier --write",
    "linter:md": "prettier --list-different",
    "lint": "npm run linter:md -s -- '**/*.md'",
    "test:ci": "npm run dist -s"
  }
}
