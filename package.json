{
  "name": "thibaudcolas",
  "version": "1.0.0",
  "private": true,
  "author": "Thibaud Colas",
  "license": "MIT",
  "homepage": "https://thib.me/",
  "description": "My personal portfolio website",
  "repository": {
    "type": "git",
    "url": "https://github.com/thibaudcolas/thibaudcolas.git"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always",
    "proseWrap": "preserve"
  },
  "dependencies": {
    "jsonresume-theme-eloquent": "^4.0.0"
  },
  "devDependencies": {
    "prettier": "^1.10.2",
    "resume-cli": "^0.4.19",
    "write-good": "^0.11.3"
  },
  "scripts": {
    "start": "bundle exec jekyll serve",
    "dist": "bundle exec jekyll build && npm run dist:resume -s",
    "dist:resume": "node raw/resume/export.js > dist/resume.html",
    "formatter": "prettier --write",
    "linter:md": "prettier --list-different",
    "lint:resume": "write-good --no-adverb --no-passive --no-weasel raw/resume/resume.json && ./rank-writing.py --aspell --diction resume.json",
    "lint": "npm run linter:md -s -- '**/*.md'",
    "test:resume": "resume test",
    "test:ci": "npm run dist -s && npm run lint -s"
  }
}
